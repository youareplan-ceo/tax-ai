# YouArePlan EasyTax v8 - 환경변수 설정

# OpenAI API 설정 (필수) - 실제 운영 시 실제 키로 교체 필요
# https://platform.openai.com/api-keys 에서 발급받은 실제 API 키로 교체하세요
# 현재 테스트용 플레이스홀더 - 프로덕션에서 실제 키로 교체 필수
OPENAI_API_KEY=sk-proj-demo-test-key-for-development-only

# 애플리케이션 설정
APP_NAME=YouArePlan EasyTax - 세무 AI 코파일럿
APP_VERSION=v8
DEBUG=false
ENVIRONMENT=production

# 데이터베이스 설정
DATABASE_URL=sqlite:///./youareplan_tax_ai.db

# 서버 설정
API_HOST=0.0.0.0
API_PORT=8081

# 보안 설정 (프로덕션에서 강화 필요)
SECRET_KEY=youareplan-easytax-v8-production-secret-key-a7b3c9f8e2d4c1a6b9f3e8c5d2a7b4c9f6e1d8c3a5b7f2e9c4d6a1b8f5e3c7a9
ALLOWED_ORIGINS=https://youareplan-easytax-ui.onrender.com,https://youareplan.co.kr
CORS_CREDENTIALS=true
SECURITY_HEADERS=true

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/youareplan_tax_ai.log

# 파일 업로드 제한
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=csv,xlsx,xls

# OpenAI 모델 설정
OPENAI_MODEL_CLASSIFY=gpt-4o-mini
OPENAI_MODEL_ANALYSIS=gpt-4o
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# 유아플랜 브랜딩
COMPANY_NAME=유아플랜 컨설팅
COMPANY_WEBSITE=youareplan.co.kr
COMPANY_EMAIL=contact@youareplan.co.kr

# 캐시 설정
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# 모니터링 및 성능
ENABLE_METRICS=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
WORKER_PROCESSES=2
MAX_CONNECTIONS=1000

# 배포 환경별 설정
RENDER_EXTERNAL_URL=https://youareplan-easytax-api.onrender.com
VERCEL_URL=https://youareplan-easytax.vercel.app
DOCKER_NETWORK=youareplan-easytax-network

# 백업 및 유지보수
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
MAINTENANCE_MODE=false